<%- include('includes/head')%>
  <%- include('includes/nav')%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <!-- conteudo: -->
          <div class="col-lg-8 my-3">
            <h1 class="text-center">CONTATO</h1>
            <p class="text-center lead">Crie ou edite seu formulario abaixo</p>
            
            <%- include('includes/messages');%>

            <% if(contato.id) {%>
              <form class="form-contato" action="/contato/edit/<%= contato._id%>" method="post">
            <%}else{%>
              <form class="form-contato" action="/contato/register" method="post">
            <%}%>  
                <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                <div class="form-group">
                  <label>Nome</label>
                  <input value="<%=contato.nome%>" type="text" class="form-control" name="nome" placeholder="Nome do Contato">
                </div>
                <div class="form-group">
                  <label>Sobrenome</label>
                  <input value="<%=contato.sobrenome%>" type="text" class="form-control" name="sobrenome" placeholder="sobrenome do Contato">
                </div>
                <div class="form-group">
                  <label>Seu Email</label>
                  <input value="<%=contato.email%>" type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <label>Telefone</label>
                  <input value="<%=contato.telefone%>" type="tel" class="form-control" name="telefone" placeholder="Telefone">
                </div>
                <button  type="submit" class="btn btn-primary">Salvar</button>
              </form>
            </div>
          </div>
        <div class="col-lg-2"></div>
      </div>
    </div>


    <%- include('includes/footer')%>